@page "/"

<PageTitle>Home</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="pa-4">
    <!-- Header Section -->
    <MudPaper Class="pa-4 mb-8" Elevation="4" Square="true" Style="background-image: url('https://source.unsplash.com/featured/?flight'); background-size: cover; color: white; text-shadow: 1px 1px 5px rgba(0,0,0,0.7);">
        <MudText Typo="Typo.h3" GutterBottom="true">Your Personal Flight Price Tracker</MudText>
        <MudText Typo="Typo.body1">
            Discover the best deals on flights. Track and monitor flight prices daily for your preferred routes.
        </MudText>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="mt-4" Href="/watchlist">
            Get Started
        </MudButton>
    </MudPaper>

    <!-- Features Section -->
    <MudGrid>
        <MudItem xs="12" md="6">
            <MudCard Elevation="2" Class="pa-4 mb-4">
                <MudCardMedia Image="https://images.unsplash.com/photo-1706711625046-93890d38c630?q=80&w=3270&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" Height="140" />
                <MudCardContent>
                    <MudText Typo="Typo.h5" GutterBottom="true">Daily Price Tracking</MudText>
                    <MudText Typo="Typo.body2">
                        Get up-to-date information on flight prices every day. Never miss a great deal again!
                    </MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
        <MudItem xs="12" md="6">
            <MudCard Elevation="2" Class="pa-4 mb-4">
                <MudCardMedia Image="https://images.unsplash.com/photo-1522199873717-bc67b1a5e32b?q=80&w=3272&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" Height="140" />
                <MudCardContent>
                    <MudText Typo="Typo.h5" GutterBottom="true">Find the Best Day to Book</MudText>
                    <MudText Typo="Typo.body2">
                        Analyze price trends to discover how flight prices vary across different days. <br />
                        Save money by booking on the day when prices are at their lowest.
                    </MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>

    <!-- How It Works Section -->
    <MudText Typo="Typo.h4" GutterBottom="true" Class="mt-8">How It Works</MudText>
    <MudGrid>
        <MudItem xs="12" md="4">
            <MudCard Elevation="1" Class="pa-3">
                <MudAvatar Icon="Icons.Material.Flight" Size="Size.Large" Color="Color.Primary" Class="mb-3" />
                <MudText Typo="Typo.h6">Search Flights</MudText>
                <MudText Typo="Typo.body2">
                    Enter your desired routes and dates to start tracking flight prices.
                </MudText>
            </MudCard>
        </MudItem>
        <MudItem xs="12" md="4">
            <MudCard Elevation="1" Class="pa-3">
                <MudAvatar Icon="Icons.Material.Alarm" Size="Size.Large" Color="Color.Secondary" Class="mb-3" />
                <MudText Typo="Typo.h6">Set Alerts</MudText>
                <MudText Typo="Typo.body2">
                    Configure notifications to get updates on price changes for your selected flights.
                </MudText>
            </MudCard>
        </MudItem>
        <MudItem xs="12" md="4">
            <MudCard Elevation="1" Class="pa-3">
                <MudAvatar Icon="Icons.Material.Money" Size="Size.Large" Color="Color.Success" Class="mb-3" />
                <MudText Typo="Typo.h6">Save Money</MudText>
                <MudText Typo="Typo.body2">
                    Book flights at the perfect time when prices are at their lowest.
                </MudText>
            </MudCard>
        </MudItem>
    </MudGrid>

    <!-- Footer Section -->
    <MudPaper Class="pa-4 mt-8" Square="true" Style="background-color: #f4f4f4;">
        <MudText Typo="Typo.body2" Align="Align.Center">
            © 2025 Flight Tracker. Built with ❤️ using MudBlazor and .NET 8.
        </MudText>
    </MudPaper>
</MudContainer>
